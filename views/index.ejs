<div class="author">
  <h1 class="author__heading">Hello, I Am Chandra Vishal!</h1>
  <p class="author__body">This is a Space Blog.</p>
</div>

<img src="/img/profileImage.png" alt="doing somthing in the image" class="main-image" >

<section class="artiles">
  <h2 class="articles__heading">Latest Posts</h2>
  
  <ul class="article-ul">

    <% data.forEach(post => { %>
    <li>
      <a href="/Post/<%= post._id %>">
        <span><%= post.title %></span>
        <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
      </a>
    </li>
    <% }) %>
  </ul>

  <% if (nextPage !== null) { %>
   <a href="/?page=<%=nextPage%>" class="pagination">&lt; View Older Posts</a>
  <% } %>

</section>